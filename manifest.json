{
  "manifest_version": 3,
  "name": "Chess Chronicles",
  "version": "1.1",
  "description": "Uncover legendary chess games from the past, right in your browser!",
  "action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
        "matches": [ "https://en.wikipedia.org/wiki/List_of_chess_games"],
        "js": ["popup.js"]
    }
 ],
 "icons": {
    "48": "assets/icon.png"
 }
}
